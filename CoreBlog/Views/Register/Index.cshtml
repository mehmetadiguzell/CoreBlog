@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/CoreBlogTema/web/js/jquery-2.2.3.min.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">YAZAR KAYIT SAYFASI</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index","Register",FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            @Html.TextBoxFor(m=>m.WriterName,new {@class="form-control"})
                            @Html.ValidationMessageFor(m=>m.WriterName,"",new {@class="text-danger"})                         
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">Mail Adresi</label>
                            @Html.TextBoxFor(m=>m.WriterMail,new {@class="form-control"})
                            @Html.ValidationMessageFor(m=>m.WriterMail,"",new {@class="text-danger"})                    
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            @Html.PasswordFor(m=>m.WriterPassword,new {@class="form-control"})
                            @Html.ValidationMessageFor(m=>m.WriterPassword,"",new {@class="text-danger"})                    
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Görsel Dosya Yolu</label>
                            @Html.TextBoxFor(m=>m.WriterImage,new {@class="form-control"})
                            @Html.ValidationMessageFor(m=>m.WriterImage)                   
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt Ol</button>
                    <p>
                        <a href="#" id="btn1">Şartları Okudum,kabul ediyorum.</a>
                    </p>
                }

            </div>
        </div>
    </div>
    <script>
        $('#btn1').click(function() {
        swal("Harika!", "Başarıyla kayıt olundu!", "success");
        })
    </script>
</section>

