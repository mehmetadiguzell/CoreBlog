
<div class="tech-btm">
    <p>Teknolojik gelişmelerden haberdar olun </p>
    <form action="/NewsLetter/SubscribeMail" method="post">
        <input type="email" placeholder="Email" required="" name="Mail">
        <input type="submit" id="btn" value="Abone Ol">
    </form>

</div>
<script type="text/javascript">
$("#btn").click(function () {
    let value = {
        Mail: $("#Mail").val();
    }

    $.ajax({
        type: "Post",
        url: "/NewsLetter/SubscribeMail/",
        data: value,
        success: function (func) {
            var result = jQuery.parseJSON(func);
        }
    });
});

</script>
