@model List<CoreBlog.Areas.Admin.Models.RoleAssignWM>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-control">
            <input type="hidden" asp-for="@Model[i].RoleId">
            <input type="hidden" asp-for="@Model[i].RoleName">
            <input type="checkbox" asp-for="@Model[i].Exis" class="form-check-input">
            <label class="form-check-label" for="@Model[i].Exis">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-info">Değişiklikleri Kaydet</button>
</form>
<a href="/Admin/AdminRole/UserRoleList" class="btn btn-succes">Kullanıcı Listesi</a>
